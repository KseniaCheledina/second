.phone-top
	flexbox()
	justify-content(flex-end)
	flex(0 0 41.8%)
	height: 583px
.frame
	position: relative
	top: 64px
	z-index: 9
	max-width: 100%
	width: 388px
	height: 814px
	background: url("images/phone_frame.png") no-repeat
.screen
	position: absolute
	z-index: 10
	max-width: 329px
	max-height: 583px
	top: 115px
	left: 28px
	width: 100%
	height: 100%
	background: url("images/phone_screen.png") no-repeat
			
.darker-line
	position: absolute
	border-bottom: 82px solid darker-green
	border-left: 50px solid transparent
	border-right: 35px solid transparent
	height: 0
	width: 130%
	left: -67.7%
	top: 20.3%
	z-index: 3
	-webkit-transform: rotate(37.7deg)
.lighter-line
	position: absolute
	border-bottom: 82px solid lighter-green
	border-left: 50px solid transparent
	border-right: 35px solid transparent
	height: 0
	width: 130%
	left: -66.8%
	top: 39.3%
	z-index: 4
	-webkit-transform: rotate(37.7deg)

+for_breakpoint(desktop)
	.phone-top
		display: none
+for_breakpoint(tablet)
	.phone-top
		display: none
+for_breakpoint(mobile)
	.phone-top
		display: none
	