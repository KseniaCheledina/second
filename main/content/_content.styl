.content
	flexbox()
	flex(1 0 58.2%)
	padding: 0 5.3% 0 10.6%
.introduction
	flexbox()
	flex-direction(column)
	justify-content(center)
	line-height: 1.2
	font-weight: normal
	h2
		text-transform: uppercase
		font-weight: 400
		font-size: 1.92em
		color: white
	h2::before
		content: ""
		display: block
		padding-top: 11.3%
		height: 0
	p::after, p::before
		content: ""
		display: block
		padding-bottom: 4.5%
		height: 0	
	p 
		font-size: 1.128em
		font-weight: 200
		line-height: 1.25
		border-bottom: 1px dashed darker-red
		color: white
		
	.padding
		align-self(flex-end)
		padding-right: 1.5%
	.padding::before
		content: ""
		display: block
		padding-top: 19%
		height: 0
	button
		text-transform: uppercase
		background: lighter-green
		color: #ffffff
		font-size: 1.21em
		width: 166px
		height: 53px
		padding-left: 6%
		border-radius: 6px 