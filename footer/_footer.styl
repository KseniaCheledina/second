#footer::before
	content: ""
	display: block
	padding-bottom: 2%
	height: 0
#footer
	color: #000000
	background: footer-color
	height: 73px
	flexbox()
.footer
	width: 100%
	font-size: 0.96em
	font-weight: 300
	flexbox()
	flex(1 0 50%)
.copyright, .contact
	align-self(center)
	flex: 1 0 40%
.copyright
	padding-left: 9.5%
.contact
	flexbox()
	align-items(center)
	padding-left: 2.46%
.mail-icon
	background: url("../images/mail_icon.png") no-repeat 0 0
	width: 30px
	height: 24px
	margin: 0 3% 1% 0

@import "_responsive"