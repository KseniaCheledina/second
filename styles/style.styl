@import "fonts"
@import "flexbox"

darker-green = #04E4A2
lighter-green = #69F0AE
hover-color = #FDD835
footer-color = #FEFCF2
darker-red = #E94643
lighter-red = #EF5350
lighter-black = #1D1D1D
grey = #BDBDBD

/* -------- Genera part ----------*/
html
	width: 100%
	height: 100%
*
	padding: 0
	margin: 0
	border: 0
	font-size: 100%
	vertical-align: baseline
	box-sizing: border-box

body
	line-height: 1
	width: 100%
	height: 100%
	font-family: Monserrat, sans-serif
	font-size: 16px
	background: yellow
ul
	li
		list-style: none
a
	text-decoration: none

.positioner
	max-width: 1200px
	margin: 0 auto

/* -------- Header part ----------*/

.green-line
	width: 100%
	background: darker-green
	height: 22px
#header
	background: darker-red
	height: 100px
	flexbox(flex)
	flex-wrap(wrap)
	nav
		width: 100%
		color: #ffffff
		flexbox(flex)
		justify-content(space-between)
		align-items: baseline
		.logo
			font-size: 2em 
			font-weight: bold
			padding-left: 13%
		ul	
			li
				text-transform: uppercase
			a:hover
				border-bottom: 3px solid hover-color

/* -------- Main part ----------*/
main 
	.red
		background: lighter-red
		width: 100%
		height: 104vh
	.container
		flexbox(flex)
		.phone, .content
			flex(1)
		.content
			flexbox(flex)
			flex-wrap: (wrap)
			color: #ffffff
			h2
				text-transform: uppercase
				font-size: 1.8em
				font-weight: normal
			.introduction
				height: 104vh
		.phone
			.frame
				position: relative
				background: url("../images/phone_frame.png") no-repeat
				width: 100%
				height: 100%
				img
					
					position: absolute
					top: 115px
					left: 28px
/* -------- Footer part ----------*/
#footer
	background: footer-color
	height: 73px
	flexbox(flex)
	.footer
		width: 100%
		flexbox(flex)
		flex(50%)
		.copyright, .contact
			align-self: center
			flex(50%)
		.copyright
			padding-left: 9%
		.contact
			flexbox(flex)
			align-items: center
			padding-left: 2%
			img
				margin-right: 19px




