@import "fonts"
@import "flexbox"

darker-green = #04E4A2
lighter-green = #69F0AE
hover-color = #FDD835
footer-color = #FEFCF2
darker-red = #E94643
lighter-red = #EF5350
lighter-black = #1D1D1D
form-border = #E3F2FD
grey = #636363
grey-special = rgba(99, 99, 99, 0.57)
white = #ffffff

/* -------- Genera part ----------*/
html
	min-height: 100%
	flexbox()
	flex-direction(column)
	background: white
*
	padding: 0
	margin: 0
	border: 0
	font-size: 100%
	box-sizing: border-box

body
	z-index: -1
	line-height: 1
	width: 100%
	height: 100%
	font-family: Montserrat, sans-serif
	font-size: 16px
	color: white
	flexbox()
	flex-direction(column)
ul
	li
		list-style: none
a
	text-decoration: none

.positioner
	max-width: 1200px
	margin: 0 auto
	flexbox()
	position: relative
.positioner-bottom
	width: 1200px
	margin: 0 auto
	flexbox()

/* -------- Header part ----------*/

.green-line
	width: 100%
	background: darker-green
	height: 22px
#header
	width: 100%
	background: darker-red
	height: 100px
	flexbox()
	flex-wrap(wrap)
	position: relative
	nav
		width: 100%
		flexbox()
		justify-content(space-between)
		.logo
			font-size: 2.1em 
			font-weight: 700
			padding-left: 12.3%
		ul	
			font-weight: 200
			font-size: 1.06em
			padding: 0.45% 0.5% 0 0
			li
				text-transform: uppercase
				a
					border-bottom: 3px solid hover-color

/* -------- Main part ----------*/

	/*------ red part --------*/
main
	flexbox()
	flex-direction(column)
	width: 100%
	flex-grow: 1
.red 
	flexbox()
	background: lighter-red
	max-width: 100%
	z-index: -1

.content
	flexbox()
	flex(1 0 58.2%)
	padding: 0 5.3% 0 10.6%
.introduction
	flexbox()
	flex-direction(column)
	justify-content(center)
	line-height: 1.2
	font-weight: normal
	h2
		text-transform: uppercase
		font-weight: 400
		font-size: 1.92em
		color: white
	h2::before
		content: ""
		display: block
		padding-top: 11.3%
		height: 0
	p::after, p::before
		content: ""
		display: block
		padding-bottom: 4.5%
		height: 0	
	p 
		font-size: 1.128em
		font-weight: 200
		line-height: 1.25
		border-bottom: 1px dashed darker-red
		color: white
		
	.padding
		align-self(flex-end)
		padding-right: 1.5%
	.padding::before
		content: ""
		display: block
		padding-top: 19%
		height: 0
	button
		text-transform: uppercase
		background: lighter-green
		color: #ffffff
		font-size: 1.21em
		width: 166px
		height: 53px
		padding-left: 6%
		border-radius: 6px 
		
.phone-top
	flexbox()
	justify-content(flex-end)
	flex(0 0 41.8%)
	height: 583px
.frame
	position: relative
	top: 64px
	z-index: 9
	max-width: 100%
	width: 388px
	height: 814px
	background: url("../images/phone_frame.png") no-repeat
.screen
	position: absolute
	z-index: 10
	max-width: 329px
	max-height: 583px
	top: 115px
	left: 28px
	width: 100%
	height: 100%
	background: url("../images/phone_screen.png") no-repeat
			
.darker-line
	position: absolute
	border-bottom: 82px solid darker-green
	border-left: 50px solid transparent
	border-right: 35px solid transparent
	height: 0
	width: 130%
	left: -67.7%
	top: 20.3%
	z-index: 3
	-webkit-transform: rotate(37.7deg)
.lighter-line
	position: absolute
	border-bottom: 82px solid lighter-green
	border-left: 50px solid transparent
	border-right: 35px solid transparent
	height: 0
	width: 130%
	left: -66.8%
	top: 39.3%
	z-index: 4
	-webkit-transform: rotate(37.7deg)


    /*-------- white part --------*/

.form
	flexbox()
.phone-bottom
	flex(1 0 41.8%)
	width: 100%
form
	width: 100%
	flexbox()
	flex-direction(column)
	flex(1 0 58.2%)
	padding: 0 4.1% 0 10.6%
.form-caption
	color: lighter-red
	font-size: 1.22em
	font-weight: 300
	padding-left: 4.4%
.form-caption::before
	content: ""
	display: block
	padding-bottom: 6.5%
	height: 0	
.form-caption::after
	content: ""
	display: block
	padding-bottom: 3.5%
	height: 0
.input-section 
	flex-basis(100%)
	flexbox()
	flex-wrap(wrap)
	justify-content(space-between)
	input
		flex-basis(48%)
		height: 50px
		font-family: Montserrat
		font-weight: 300	
		font-size: 0.97em
		border: 2px solid form-border
		border-radius: 4px
		padding: 13px 20px
		color: grey
	input:first-child, input:nth-child(2)
		margin-bottom: 17px
	input:nth-child(2), input:last-child
		padding-left: 35px
	input:last-child
		background: url("../images/arrow.png") no-repeat 92% 52%

input::-webkit-input-placeholder
	color: #636363
input:-moz-placeholder 
	color: #636363
input::-moz-placeholder 
	color: #636363
input:-ms-input-placeholder 
	color: #636363

.textarea
	textarea
		font-family: Montserrat
		font-size: 0.96em
		font-weight: 300
		padding: 12px 22px
		border: 2px solid form-border
		border-radius: 4px
		width: 100%
		height: 98px
		resize: none
		color: grey
.textarea::before
	content: ""
	display: block
	padding-bottom: 3.3%
	height: 0
						
.submit	
	align-self(flex-end)
	input[type="submit"]
		background: darker-red
		height: 45px
		width: 120px
		font-size: 1.25em
		font-weight: 600
		color: white
		border-radius: 8px
		text-transform: uppercase	

.submit::before
	content: ""
	display: block
	padding-bottom: 11.5%
	height: 0
.submit::after
	content: ""
	display: block
	padding-bottom: 24%
	height: 0
/* -------- Footer part ----------*/

#footer::before
	content: ""
	display: block
	padding-bottom: 2%
	height: 0
#footer
	color: #000000
	background: footer-color
	height: 73px
	flexbox()
.footer
	width: 100%
	font-size: 0.96em
	font-weight: 300
	flexbox()
	flex(1 0 50%)
.copyright, .contact
	align-self(center)
	flex: 1 0 40%
.copyright
	padding-left: 9.5%
.contact
	flexbox()
	align-items(center)
	padding-left: 2.46%
.mail-icon
	background: url("../images/mail_icon.png") no-repeat 0 0
	width: 30px
	height: 24px
	margin: 0 3% 1% 0
				
@media screen and (min-width: 768px) and (max-width: 1199px)
	.phone-top, .phone-bottom
		display: none
	.padding::after
		content: ""
		display: block
		padding-top: 10%
		height: 0
@media screen and (min-width: 450px) and (max-width: 767px)
	.phone-top, .phone-bottom
		display: none
	.padding::after
		content: ""
		display: block
		padding-top: 10%
		height: 0
	.input-section
		flex-basis(100%)
	.input-section input 
		flex-basis(100%)
	.input-section input:nth-child(2), .input-section input:last-child
		padding: 13px 19px
	input:nth-child(3), input:last-child
		margin-bottom: 17px

@media screen and (max-width: 449px)
	.phone-top, .phone-bottom
		display: none
	.contact .mail-icon
		display: none
	.padding::after
		content: ""
		display: block
		padding-top: 10%
		height: 0
	.input-section
		flex-basis(100%)
	.input-section input 
		flex-basis(100%)
	.input-section input:nth-child(2), .input-section input:last-child
		padding: 13px 19px
	input:nth-child(3), input:last-child
		margin-bottom: 17px



